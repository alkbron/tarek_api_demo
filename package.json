{
    "name": "tarek-api-demo",
    "version": "1.0.0",
    "description": "API CRUD simple avec Bun, Elysia, et Drizzle ORM",
    "type": "module",
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "start": "bun run src/index.ts",
